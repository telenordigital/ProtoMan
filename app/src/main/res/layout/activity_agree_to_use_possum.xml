<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgreeToUsePossumActivity">

    <Button
        android:id="@+id/AgreeToUsePossumYesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="52dp"
        android:text="YES"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AgreeToUsePossumText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AgreeToUsePossumTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="152dp"
        android:gravity="center"
        android:text="Agree to this"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AgreeToUsePossumText"
        android:layout_width="300dp"
        android:layout_height="265dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="42dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Suspendisse interdum consectetur libero id faucibus nisl tincidunt. Semper eget duis at tellus at urna condimentum. Porttitor eget dolor morbi non arcu. Feugiat sed lectus vestibulum mattis ullamcorper velit sed ullamcorper morbi. Sit amet facilisis magna etiam tempor. Orci phasellus egestas tellus rutrum tellus pellentesque eu tincidunt tortor. Adipiscing elit pellentesque habitant morbi tristique. Sapien et ligula ullamcorper malesuada proin libero nunc consequat interdum. Tincidunt lobortis feugiat vivamus at augue eget arcu dictum varius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AgreeToUsePossumTextTitle" />

    <Button
        android:id="@+id/AgreeToUsePossumLaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Maybe Later"
        app:layout_constraintBottom_toBottomOf="@+id/AgreeToUsePossumYesButton"
        app:layout_constraintStart_toEndOf="@+id/AgreeToUsePossumYesButton"
        app:layout_constraintTop_toTopOf="@+id/AgreeToUsePossumYesButton" />

</android.support.constraint.ConstraintLayout>